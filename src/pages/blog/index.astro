---
import Layout from '../../layouts/Layout.astro'
import Card from '../../components/Card.astro'

const cardList = [
	{
		title: 'test1',
		body: 'ddddddd',
		href: '/blog/1',
	},
	{
		title: 'test2',
		body: 'daddddsd',
		href: '/blog/2',
	},
	{
		title: 'test3',
		body: 'ddddddd',
		href: '/blog/3',
	}
]
---

<Layout title="Welcome to Astro.">
	<ul class="card-container">
		{
			cardList.map((item) => (
				<Card {...item} />
			))
		}
	</ul>
</Layout>

<style>
	.card-container {
		display: flex;
		gap: 16px;
	}
</style>
